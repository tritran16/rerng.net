<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	 
    <LinearLayout
        android:id="@+id/layoutVideo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        >
              
       <FrameLayout
        android:id="@+id/videoSurfaceContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

	        <SurfaceView
	            android:id="@+id/videoSurface"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" />
	    </FrameLayout>

      
	      <LinearLayout 
	        android:id="@+id/layoutInfo"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:orientation="vertical"	    
	    	> 
				<LinearLayout 
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    android:padding="5dp"	    
			    > 
		   		<TextView 
		   		    android:id="@+id/txtFilmName"
		   		    android:layout_width="wrap_content"
		   		    android:layout_height="wrap_content"
		   		    android:text=""
		   		    android:textSize="17sp"
		   		    android:textColor="@color/film_name"
		   		    />
		        </LinearLayout>
	        
			
			<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		     android:padding="4dp"
		     android:paddingLeft="7dp"		    
		    > 

	   		<TextView
	   		    android:layout_width="0dp"
	   		    android:layout_height="wrap_content"
	   		    android:layout_weight="0.2"
	   		    android:text="Actors"
	   		    android:textStyle="bold" />

	   		<TextView
	   		    android:id="@+id/txtActor"
	   		    android:layout_width="0dp"
	   		    android:layout_height="wrap_content"
	   		    android:paddingLeft="10dp"
	   		    android:layout_weight="0.7"
	   		    android:text="Unknowns" />

	        </LinearLayout>
	        
			<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		     android:padding="4dp"
		     android:paddingLeft="7dp"		    
		    > 
	   		<TextView
	   		    android:layout_width="0dp"
	   		    android:layout_height="wrap_content"
	   		    android:layout_weight="0.2"
	   		    android:text="Directors"
	   		    android:textStyle="bold"
	   		     />

	   		<TextView
	   		    android:id="@+id/txtDirector"
	   		    android:layout_width="0dp"
	   		    android:layout_height="wrap_content"
	   		    android:text="Unknowns" 
	   		    android:paddingLeft="10dp"
	   		    android:layout_weight="0.7"
	   		    />
	        </LinearLayout>
	        <LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"	
		    android:padding="4dp"
		    android:paddingLeft="7dp"
			android:textStyle="bold"
			android:visibility="gone"
		    > 
	   		<TextView
	   		    android:layout_width="0dp"
	   		    android:layout_height="wrap_content"
	   		    android:layout_weight="0.2"
	   		    android:text="Writers" 
	   		     android:textStyle="bold"
	   		    />

	   		<TextView
	   		    android:id="@+id/txtWriter"
	   		    android:layout_width="0dp"
	   		    android:layout_height="wrap_content"
	   		    android:paddingLeft="10dp"
	   		    android:layout_weight="0.7"
	   		    android:text="" />

	        </LinearLayout>
	        
	   		<TextView 
	   		    android:id="@+id/txtFilmDesc"
	   		    android:layout_width="match_parent"
	   		    android:layout_height="wrap_content"
	   		    android:text="Not Available"
	   		    android:paddingLeft="10dp"
	   		    android:paddingTop="10dp"
	   		    android:scrollbars = "vertical"
	   		    android:textStyle="italic"
	   		    />
	        
	        
	    
		</LinearLayout>
       
    </LinearLayout>
	
	<ProgressBar 
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:id="@+id/progress"
	    android:layout_centerInParent="true"
	    />


    
	

</RelativeLayout><!-- From: file:/Users/trandinhtri/Documents/src/src/Android-Studio/rerng/src/main/res/layout/activity_film.xml -->